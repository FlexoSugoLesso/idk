<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="400dp"
    android:layout_height="280dp"
    android:layout_gravity="center"
    android:background="@drawable/eventbg">


    <com.github.siyamed.shapeimageview.RoundedImageView
        android:id="@+id/roundedImageView"
        android:layout_width="315dp"
        android:layout_height="197dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.507"
        app:siRadius="17dp"></com.github.siyamed.shapeimageview.RoundedImageView>

    <TextView
        android:id="@+id/event_title"
        style="@style/Event_Title"
        android:layout_width="280dp"
        android:layout_height="23dp"
        android:layout_marginTop="55dp"
        android:layout_marginBottom="84dp"
        android:background="@drawable/event_title_bg"
        android:fontFamily="@font/metropolismedium"
        android:gravity="center"
        android:text="Arte"
        android:textAlignment="gravity"
        app:layout_constraintBottom_toTopOf="@+id/event_date_letter_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/event_date_letter_name"
        style="@style/Event_Title_Date"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="165dp"
        android:layout_marginEnd="44dp"
        android:paddingLeft="15dp"
        android:text="GIO"
        app:layout_constraintBottom_toTopOf="@+id/event_date_number_day"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/event_date_number_day"
        style="@style/Event_Title_Date"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginBottom="77dp"
        android:paddingLeft="15dp"
        android:text="18"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/event_date_month_name"
        app:layout_constraintStart_toStartOf="@+id/event_date_month_name"
        app:layout_constraintTop_toBottomOf="@+id/event_date_letter_name" />

    <TextView
        android:id="@+id/event_date_month_name"
        style="@style/Event_Title_Date"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginStart="44dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="58dp"
        android:paddingLeft="15dp"
        android:text="MARZO"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/event_date_number_day" />


</android.support.constraint.ConstraintLayout>
